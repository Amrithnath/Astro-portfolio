---
// Redirect blog to work in progress page
return Astro.redirect('/work-in-progress');

import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';

// Terminal content for blog redirect
const terminalCommands = [
  {
    command: 'ls -la ~/blog/',
    output: `total 8
drwxr-xr-x  3 amrith amrith  4096 Dec 12 04:20 .
drwxr-xr-x  8 amrith amrith  4096 Dec 12 04:20 ..
lrwxrwxrwx  1 amrith amrith    12 Dec 12 04:20 index -> ../blogs/
-rw-r--r--  1 amrith amrith   256 Dec 12 04:20 redirect.txt`
  },
  {
    command: 'cat redirect.txt',
    output: `# Blog Redirect

This path redirects to the main blogs directory.
Use 'cd ../blogs/' to access all blog posts.

Redirecting in 3 seconds...`
  }
];
---

<BaseLayout title="Blog | Amrith Shanbhag" description="Amrith Shanbhag's Blog" currentPage="/blog">
  <meta http-equiv="refresh" content="0; url=/blogs/" />
  
  <!-- Terminal Theme View -->
  <div class="terminal-view">
    <div class="terminal-container">
      <div class="terminal">
        <div class="terminal-content">
          {terminalCommands.map(cmd => (
            <div class="command-block">
              <div class="prompt">
                <span class="user">amrith</span>
                <span class="symbol">@</span>
                <span class="host">portfolio</span>
                <span class="path">:~$</span>
                <span class="command">{cmd.command}</span>
              </div>
              <div class="output">
                <pre class="command-output">{cmd.output}</pre>
              </div>
            </div>
          ))}
          <div class="prompt">
            <span class="user">amrith</span>
            <span class="symbol">@</span>
            <span class="host">portfolio</span>
            <span class="path">:~$</span>
            <span class="cursor">_</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Professional Theme View -->
  <div class="professional-view">
    <Nav />
    <main class="container">
      <h1>Blog</h1>
      <p>Redirecting to <a href="/blogs/">blogs</a>...</p>
    </main>
    <Footer />
  </div>

  <!-- Personal Theme View -->
  <div class="personal-view">
    <Nav />
    <div class="wrapper">
      <h1>Blog</h1>
      <p>Redirecting to <a href="/blogs/">blogs</a>...</p>
    </div>
    <Footer />
  </div>
</BaseLayout>

<style>
  .wrapper {
    margin-top: 2em;
    margin-bottom: 2em;
  }
  
  .theme-professional .professional-view .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }
</style> 