---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';
import ThemeSwitch from '../components/ThemeSwitch.astro'
import {Image} from "astro:assets"
---

<html lang="en">
	<head>
		<ThemeSwitch/>
		<MainHead title="About | Amrithnath Vijayakumar" description="About Amrithnath Vijayakumar" />
		<style>
			.heroImg {
				max-height: 24rem;
				object-fit: cover;
				overflow: hidden;
			}

			.heroImg img {
				width: 100%;
			}

			.bio {
				font-size: var(--f-u1);
				line-height: 2;
				margin-top: 4em;
			}

			.wrapper.bio {
				max-width: 50em;
			}
		</style>
	</head>
	<body>
		<Nav />
		<div class="wrapper">
			<h1>About Amrith</h1>
			<div class="heroImg">
				<Image
					src="https://images.unsplash.com/photo-1581977012607-4091712d36f9?auto=format&fit=crop&w=1400&h=350&q=75"
				    alt="Generic image of person on kerbside with cool shoe"
                    width=1400
                    height=350
                />
			</div>
			<div class="bio wrapper">
				<p>
					Engineer, Gamer, Shutter bug, Musician, DIY enthusiast working on adding more items to the list while rendering my life one frame a day.
				</p>
				<p>
					This site is perpetually under construction.
				</p>
			</div>
		</div>
		<Footer />
	</body>
</html>
