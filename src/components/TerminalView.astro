// Grid ASCII builder for precise alignment
const ASCII_ROWS = 7;
const ASCII_COLS = 5;
const LETTER_SPACING = 1;
const letterPatterns: Record<string, string[]> = {
  A: [
    '01110',
    '10001',
    '10001',
    '11111',
    '10001',
    '10001',
    '10001',
  ],
  M: [
